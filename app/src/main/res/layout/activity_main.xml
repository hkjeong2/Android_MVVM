<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_livedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라이브 데이터"
            android:textSize="35sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/memory_test_bt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="리스트 메모리 테스트"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/title_livedata"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/livedataRV_bt"/>

        <Button
            android:id="@+id/livedataRV_bt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="뷰모델 테스트"
            app:layout_constraintTop_toTopOf="@id/memory_test_bt"
            app:layout_constraintBottom_toBottomOf="@id/memory_test_bt"
            app:layout_constraintStart_toEndOf="@id/memory_test_bt"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/title_observablefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵저버블 필드"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/memory_test_bt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/observablefieldRV_bt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="리사이클러뷰"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/title_observablefield"
            app:layout_constraintStart_toStartOf="@id/memory_test_bt"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>